!begin_node (!kw [universal_charset])
!html_name cmd_universal_charset.html

!iflang [german]
Universellen Zeichensatz einschalten.
!endif
!iflang [english]
Turn on universal charset.
!endif

!begin_xlist [(!TYPEPOSITION)]

!item [(!TYPEPOSITION)] (!COMMAND), (!PREAMBLE) & (!MAINPART)

!item [(!SYNTAX)] (!T)!/universal_charset [ on | off ](!t)

!iflang [german]
!item [(!DESCRIPTION)]
''(!KW [universal_charset] [on!!]])'' schaltet die Verwendung des
universellen Zeichensatzes ein,
''(!KW [universal_charset] [off!!]])'' wieder aus. Standardmäßig
wird der universelle Zeichensatz von UDO nicht
verwendet, da die Umwandlung der universellen Zeichen
eine zeitaufwendige Angelegenheit ist.
!endif
!iflang [english]
!item [(!DESCRIPTION)]
''(!KW [universal_charset] [[on!!]])'' switches on the usage of the
universal charset, ''(!KW [universal_charset] [[off!!]])'' switches it
off. UDO won't use the universal charset by default because it takes
some time to look for and convert these special characters.
!endif

!item [(!EXAMPLE)]
(!T)!/universal_charset [on](!t)

!item [(!EXISTSSINCE)] Release~4 Version~0.48

!iflang [german]
!item [(!SEEALSO)]
(!link [Universeller Zeichensatz] [Universeller Zeichensatz])
!endif
!iflang [english]
!item [(!SEEALSO)]
(!link [Universal charset] [Universal charset])
!endif

!end_xlist

!end_node

