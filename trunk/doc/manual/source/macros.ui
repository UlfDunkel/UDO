!ifdest [html,hh,hah,stg]
!macro  IMAGES
!endif

!ifnset IMAGES
!macro  IMAGES images/
!endif


!ifdest [html,hh,hah]
!macro BUG (!B)(!url [#(!1)] [http://bugs.udo-open-source.org/view.php?id=(!1)])(!b)
#else
!macro BUG (!B)#(!1)(!b)
!endif

