# ----------------------------------------------------------
# Einstellungen fuer csTeX (MultiTeX), GEM-Images mit 100dpi
# Settings for csTeX (MultiTeX), GEM images with 100dpi
# ----------------------------------------------------------
!ifset [csTeX]
!tex_strunk
!tex_dpi 100
!endif

# ------------------------------------------------------
# Einstellungen fuer Lindner-TeX, GEM-Images mit 100dpi
# Settings for Lindner-TeX, GEM images with 100dpi
# ------------------------------------------------------
!ifset [lindnerTeX]
!tex_strunk
!tex_dpi 100
!endif


# -------------------------------------------------------
# Einstellungen fuer emTeX, LateX2e, MSP-Grafiken, 300dpi
# werden ueber Symbol emTeX2e bzw. emTeX2.09 aktiviert
# Settings for emTeX, LateX2e, MSP images, 300dpi
# use symbol emTeX2e or emTeX2.09 to enable them
# -------------------------------------------------------
!ifset [emTeX2e]
!tex_2e
!tex_emtex
!tex_dpi 300
!no_verbatim_umlaute [tex]
!no_images [tex]
!endif

!ifset [emTeX2.09]
!tex_emtex
!tex_dpi 300
!no_verbatim_umlaute [tex]
!no_images [tex]
!endif

!raw [tex] \parskip 5pt
!raw [tex] \parindent 0pt

